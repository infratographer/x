{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "groupName": "go opentelemetry packages and libraries",
      "groupSlug": "opentelemetry-go and libraries",
      "matchDatasources": [
        "go"
      ],
      "matchPackagePrefixes": [
        "go.opentelemetry.io/",
        "github.com/XSAM/otelsq/"
      ]
    }
  ]
}
